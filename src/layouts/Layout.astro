---
import ShowSizes from "../components/showSizes.astro";
import MobileNav from "../components/mobileNav.astro";
import DesktopNav from "../components/DesktopNav.astro";
import Logo from "../components/logo.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;

const requestUrl = Astro.request.url;
const url = new URL(requestUrl);

const currentPath = url.pathname;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Michroma&family=Poppins:wght@400;600;700&display=swap"
			rel="stylesheet"
		/>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Cursos de extensión Universitaria de la tecnología de la información, Big data, Project Manager, data analytics"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/cl.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-poppins">
		<header class="fixed top-0 w-full lg:py-5">
			<div
				class="flex justify-between w-11/12 max-w-screen-2xl mx-auto items-center py-4 px-4"
			>
				<Logo size="md" responsive />
				<nav>
					<MobileNav />
					<DesktopNav currentPath={currentPath} />
				</nav>
			</div>
		</header>
		<slot />

		<!-- for development -->
		<ShowSizes />
	</body>
</html>
<style is:global></style>
