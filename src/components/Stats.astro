---
import { stats } from "../const";
---

<section id="stats" class="py-24 bg-slate-100 xl:py-36 w-screen">
  <div
    class="flex flex-col lg:flex-row text-center w-11/12 mx-auto justify-between items-center [&>div.main]:flex-1 gap-y-28 mb-44 max-w-6xl"
  >
    {
      stats.map((stat, i) => {
        const isLast = i === stats.length - 1;

        return (
          <>
            <div class="main">
              <h3 class="text-7xl font-bold text-blue-950">{stat.number}</h3>
              <p class="text-xl font-michroma tracking-wide text-blue-500">
                {stat.title}
              </p>
            </div>

            <div
              class={`hidden lg:${
                !isLast ? "block" : ""
              } w-px h-24 bg-slate-300 text-white `}
            />
          </>
        );
      })
    }
  </div>

  <a
    href="/cursos"
    class="bg-blue-600 text-white block w-max mx-auto text-base p-4 font-semibold 2xl:text-xl"
    >VER UNIDADES</a
  >
</section>
